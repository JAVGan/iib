FROM centos:8
LABEL maintainer="Red Hat - EXD"

WORKDIR /src
RUN dnf -y install \
    --setopt=deltarpm=0 \
    --setopt=install_weak_deps=false \
    --setopt=tsflags=nodocs \
    python3-pip \
    && dnf clean all
COPY . .
RUN pip3 install .
CMD ["/bin/celery-3", "-A", "iib.workers.tasks", "worker", "--loglevel=info"]
